%nav.navbar.navbar-default{ role: 'navigation' }
  .container
    .navbar-header
      %button.navbar-toggle{ data: { target: '#bs-example-navbar-collapse-1', toggle: 'collapse', type: 'button' } }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Flow', root_path, { class: 'navbar-brand' }
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to 'Home', root_path
        - if current_user
          %li
            = link_to 'Flows', plans_path
          - if current_user.admin_or_creator?
            %li
              = link_to 'Manage Content', admin_path
          %li
            = link_to 'Sign out', destroy_user_session_path, { method: :delete }
        - else
          %li
            = link_to 'Sign in', new_user_session_path
