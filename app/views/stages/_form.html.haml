= form_for(@stage) do |f|
  .form-group
    = f.label :name
    = f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name'
  .form-group
    = f.label :description
    = f.text_field :description, class: 'form-control', placeholder: 'Description'
  .form-group
    = f.label :stage_type
    - # @todo: Clean this up
    = select(:stage_type, :stage_type, options_for_select(['general', 'todo', 'survey', 'video', 'discussion']))
  .form-group
    = f.label :url
    = f.text_field :url, class: 'form-control', placeholder: 'URL'
  .form-controls
    = f.submit "Submit", class: 'btn btn-primary btn-lg'
