- @unpublished_plans.each do |plan|
  .panel.panel-default
    .panel-heading
      %strong
        = plan.name
    .panel-body
      .container-fluid
        .row
          - if plan.image.present?
            .col-sm-4
              = image_tag(plan.image.url, class: 'img-responsive')
            .col-sm-8
              = plan.description
          - else
            .col-xs-12
              = plan.description
      %br
    .panel-footer
      .text-right
        = link_to('Manage Flow', plan_path(id: plan.id))
        - if plan.has_stages?
          = ' | '
          = link_to('Preview Flow', plan_plan_stage_path(plan_id: plan.id, id: plan.starting_plan_stage.id))
          = ' | '
          = link_to('Publish Flow', publish_plan_path(id: plan.id), method: :post)
  %br
