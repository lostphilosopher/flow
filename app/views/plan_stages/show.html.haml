%h1
  = @plan.name
%h2 
  = @stage.name 
%p
  = @stage.description
%br
// @todo: How to handle a responsive video embed?
.text-center
  - if @stage.stage_type == 'video'
    %iframe{:allowscriptaccess => 'always', :allowFullScreen => 'true', :frameborder => '0', :height => '315', :width => '560', :src => "#{@stage.url}", :title => "YouTube video player"}
  - elsif @stage.stage_type == 'discussion' 
    %iframe{:allowscriptaccess => 'always', :allowFullScreen => 'true', :frameborder => '0', :height => '315', :width => '560', :src => "#{@stage.url}", :title => "Embedded discussion"}
  - elsif @stage.stage_type == 'survey'
