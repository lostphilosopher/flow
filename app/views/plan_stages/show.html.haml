  - else
  %br
  - if @plan_stage.last?
    = link_to('Plan Complete - Return to Plan Selection', plans_path)
  - else
    = link_to('Next', plan_plan_stage_path(plan_id: @plan.id, id: @plan_stage.next_plan_stage.id), class: 'btn btn-primary')
